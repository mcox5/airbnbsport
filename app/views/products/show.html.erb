


<div>
  <div class="card text-center">
      <div class="card-header">
        Catalog
      </div>
<!-- foto del producto -->
      <div class="col-12 d-flex lg-12 bg-success p-2 text-dark bg-opacity-25">
        <div class= "card shadow p-3 mb-5 bg-body col-8 lg-6 m-3 y-3">
          <%= cl_image_tag(@product.photo.key, crop: :fill, height: 200) %>
        </div>
<!--card de la izquirda-->
        <div class="bg-body card col-2 container lg-2 p-3 shadow">
          <p class="card-text"><%= @product.name %></p>
          <p class="card-text"><%= @product.description%></p>
          <p class="card-text"><%= @product.price %>USD</p>
        </div>
      </div>
<!--mapa-->
    <div class="col-12 d-flex lg-12 bg-success p-2 text-dark bg-opacity-25">
        <div class= "card shadow p-3 mb-5 bg-body col-8 lg-6 m-3 y-3">
        </div>
<!--fin del mapa-->
<!--boton para linkear con booking -->
      <div class="d-flex row-reverse bg-success p-2 text-dark bg-opacity-25">
          <div class= "col-12 my-4 p-2">
            <button type="button" class="btn btn-outline-success rounded-pill"><%= link_to "Arrendar!", new_product_booking_path(@product), class: "nav-link" %></button>
          </div>
      </div>
      <div class="card-footer text-muted">
        <%= "id deporte" %>
      </div>
  </div>
</div>

