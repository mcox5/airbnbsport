      <div class="w-100 p-4 m-3" style="background-color: #eee;">
        <%= simple_form_for(@product) do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.association :sport %>
          <%= f.submit 'Create', class: 'btn btn-primary' %>
