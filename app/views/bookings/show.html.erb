<div class="card mb-3 m-3" style="max-width: 10000px;">
  <div class="row g-0">
    <div class="col-md-4">
      <%= cl_image_tag(@booking.product.photo.key, crop: :fill) %>
    </div>
    <div class="col-md-8 d-flex align-items-center">
      <div class="card-body" >
        <h2 class="card-title"><%= @booking.product.name %></h2>
